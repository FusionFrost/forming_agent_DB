//---------------------------------------------------------------------------

#ifndef archivH
#define archivH
//---------------------------------------------------------------------------
class Archiv
{
private:
	UnicodeString curDir;											//! Текущая директория, где лежат файлы(Которую укажет пользователь)
	UnicodeString putDir;      									//! Директория, куда кладутся распакованные файлы
public:
	void ExtractFiles(AnsiString CurDic,AnsiString putDic); //! Распаковка файлов в указанной папке
	void putCurDir(UnicodeString cDir){ curDir = cDir; }
	UnicodeString getCurDir() { return curDir; }
};
#endif
